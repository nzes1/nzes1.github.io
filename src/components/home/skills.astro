---
import skills from "../../collections/skills.json";
import SkillTile from "../skillTile.astro";
---

<section class="max-w-4xl mx-auto px-7 lg:px-0">
  <h2
    class="text-2xl font-bold leading-10 tracking-tight text-neutral-900 dark:text-neutral-100"
  >
    Core Skills
  </h2>
  <p class="mb-6 text-base text-neutral-600 dark:text-neutral-400">
    What I focus on day-to-day as an AppSec / Red Team practitioner.
  </p>

  <div
    class="grid items-stretch w-full grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-7 mt-7"
  >
    <!-- {skills.map((skill) => <SkillTile {...skill} />)} -->
    {
      skills.map((skill) => (
        <SkillTile
          id={skill.id}
          name={skill.name}
          summary={skill.summary}
          detail={skill.detail}
          icon={skill.icon}
          theme={skill.theme}
        />
      ))
    }
  </div>
</section>
