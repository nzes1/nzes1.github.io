import { getCollection } from "astro:content";

const { category, count } = Astro.props;

const allPosts = await getCollection("post");

function parseDate(dateStr) {
  const [month, day, year] = dateStr.split(" ");
  return new Date(`${month} ${parseInt(day)}, ${year}`);
}

// Sort all posts newest first
const sortedPosts = allPosts
  .map((post) => ({
    ...post,
    date: parseDate(post.data.dateFormatted),
  }))
  .sort((a, b) => b.date.getTime() - a.date.getTime());

let filteredPosts;

// ðŸ”¹ If category is passed â†’ behave normally (used on highlights page)
if (category) {
  filteredPosts = sortedPosts.filter((post) => post.data.category === category);
} else {
  // ðŸ”¹ If no category passed â†’ homepage mode
  const categories = ["finding", "tools", "lab"];

  filteredPosts = categories
    .map((cat) => sortedPosts.find((post) => post.data.category === cat))
    .filter(Boolean);
}

// Apply count if provided
const postsLoop = (count ? filteredPosts.slice(0, count) : filteredPosts).map(
  (post) => ({
    ...(post.data || {}),
    link: `/post/${post.slug}`,
  }),
);
