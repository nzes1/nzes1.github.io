---
import {
  BrickWallShield,
  ShieldCheck,
  GitMerge,
  Container,
  BugPlay,
  Radar,
} from "lucide-astro";

const { id, name, summary, detail, icon, theme } = Astro.props;
---

<div
  class={`group relative p-6 rounded-2xl transition-all duration-300 ease-out
          ${theme?.border ?? ""}`}
>
  <!-- Offset dotted borders -->
  <span
    class={`absolute inset-0 z-20 block w-full h-full border border-dashed border-transparent
           group-hover:-translate-x-1 group-hover:-translate-y-1
           group-hover:bg-white dark:group-hover:bg-neutral-950
           rounded-2xl transition-all duration-300 ease-out
           ${theme?.border ?? "group-hover:border-neutral-300 dark:group-hover:border-neutral-600"}`}
  ></span>

  <span
    class={`absolute inset-0 z-10 block w-full h-full border border-dashed
           border-neutral-300 dark:border-neutral-600
           group-hover:translate-x-1 group-hover:translate-y-1
           rounded-2xl transition-all duration-300 ease-out
           ${theme?.border ?? ""}`}></span>

  <!-- Content -->
  <div class="relative z-30">
    <!-- Icon -->
    <div
      class={`mb-3 transition-colors
              ${theme?.icon ?? "text-neutral-700 dark:text-neutral-300"}`}
    >
      {icon === "shield" && <ShieldCheck size={22} />}
      {icon === "radar" && <Radar size={22} />}
      {icon === "brick-wall-shield" && <BrickWallShield size={22} />}
      {icon === "git-merge" && <GitMerge size={22} />}
      {icon === "container" && <Container size={22} />}
      {icon === "bug-play" && <BugPlay size={22} />}
    </div>

    <!-- Name -->
    <h3
      class={`text-base font-semibold tracking-tight
              text-neutral-900 dark:text-neutral-100
              ${theme?.title ?? ""}`}
    >
      {name}
    </h3>

    <!-- Summary -->
    <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">
      {summary}
    </p>

    <!-- Hover detail -->
    <p
      class=`mt-4 text-xs text-neutral-700 dark:text-neutral-300
             opacity-0 max-h-0 overflow-hidden
             group-hover:opacity-100 group-hover:max-h-32
             transition-all duration-300 ease-out`
    >
      {detail}
    </p>
  </div>
</div>
